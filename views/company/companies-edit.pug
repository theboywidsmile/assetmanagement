extends ../layout

block content
  h1 Edit Company
  form(method="POST", action=`/companies/edit/${company.id}`)
    .mb-3
      label.form-label(for="name") Name
      input.form-control(type="text", name="name", value=company.name, required)
    .mb-3
      label.form-label(for="address") Address
      textarea.form-control(name="address", rows="3", required)= company.address
    .mb-3
      label.form-label(for="phone") Phone
      input.form-control(type="text", name="phone", value=company.phone, required)
    .mb-3
      label.form-label(for="email") Email
      input.form-control(type="email", name="email", value=company.email, required)
    .d-flex.justify-content-between
      button.btn.btn-primary(type="submit") Save Changes
      a.btn.btn-secondary(href="/companies") Cancel
