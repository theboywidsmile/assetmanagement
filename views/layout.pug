doctype html
html
  head
    title #{title}
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
    link(rel="stylesheet", href="https://cdn.datatables.net/1.13.5/css/jquery.dataTables.min.css")
  body
    nav.navbar.navbar-expand-lg.navbar-light.bg-light
      div.container-fluid
        a.navbar-brand(href="#") Asset Management
        button.navbar-toggler(type="button", data-bs-toggle="collapse", data-bs-target="#navbarNav", aria-controls="navbarNav", aria-expanded="false", aria-label="Toggle navigation")
          span.navbar-toggler-icon
        div#navbarNav.collapse.navbar-collapse
          ul.navbar-nav
            li.nav-item.dropdown
                a.nav-link.dropdown-toggle(href="#", id="mastersDropdown", role="button", data-bs-toggle="dropdown", aria-expanded="false") Masters
                ul.dropdown-menu(aria-labelledby="mastersDropdown")
                  li
                    a.dropdown-item(href="/companies") Companies
                  li
                    a.dropdown-item(href="/employees") Employees
                  li
                    a.dropdown-item(href="/categories") Asset Categories
                  li
                    a.dropdown-item(href="/assets") Assets
            li.nav-item.dropdown 
              a.nav-link.dropdown-toggle(href="#", id="transactionsDropdown", role="button", data-bs-toggle="dropdown", aria-expanded="false") Assets Transactions
              ul.dropdown-menu(aria-labelledby="transactionsDropdown")
                li
                  a.dropdown-item(href="/issue") Issue
                li
                  a.dropdown-item(href="/return") Return
                li
                  a.dropdown-item(href="/scrap") Scrap 
            li.nav-item
              a.nav-link(href="/history") Asset History
            li.nav-item
              a.nav-link(href="/stock") Stock View
    div.container.mt-4
      block content
    script(src="https://code.jquery.com/jquery-3.6.0.min.js")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js")
    script(src="https://cdn.datatables.net/1.13.5/js/jquery.dataTables.min.js")
